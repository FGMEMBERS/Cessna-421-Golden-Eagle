<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>planchet</object-name>
    <object-name>intportetour</object-name>
    <object-name>intporteH</object-name>
    <object-name>intporteB</object-name>
    <object-name>seats</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intportevitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intportevitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intportevitre</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Cessna-421-Golden-Eagle/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.487 </x-m>
      <y-m> -0.360 </y-m>
      <z-m> -0.315 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Cessna-421-Golden-Eagle/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.035 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.376 </z-m>
    </offsets>
  </model>

  <!-- Porte -->
  <animation>
    <name>IntPorteHaute</name>
    <object-name>intporteH</object-name>
    <object-name>intportevitre</object-name>
    <object-name>intportetour</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteHaute</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -110 </factor>
    <axis>
      <x1-m> -0.163 </x1-m>
      <y1-m> -0.525 </y1-m>
      <z1-m>  0.351 </z1-m>
      <x2-m>  0.228 </x2-m>
      <y2-m> -0.526 </y2-m>
      <z2-m>  0.351 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intporteB</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 125 </factor>
    <axis>
      <x1-m> -0.185 </x1-m>
      <y1-m> -0.583 </y1-m>
      <z1-m> -0.859 </z1-m>
      <x2-m>  0.250 </x2-m>
      <y2-m> -0.561 </y2-m>
      <z2-m> -0.859 </z2-m>
    </axis>
  </animation>

</PropertyList>

